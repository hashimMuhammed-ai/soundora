<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Male_Fashion Template" />
    <meta name="keywords" content="Male_Fashion, unica, creative, html" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Soundora</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css" />
    <link rel="stylesheet" href="/css/magnific-popup.css" type="text/css" />
    <link rel="stylesheet" href="/css/nice-select.css" type="text/css" />
    <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/user/style.css" type="text/css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body {
            height: 100vh;
            margin: 0;
            font-family: "Nunito Sans", sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }
        .container {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            padding: 0 15px;
        }
        .login_wrap {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }
        .heading_s1 h3 {
            font-size: 24px;
            font-weight: 600;
            color: #333;
            text-align: center;
            margin: 0 0 30px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: 500;
        }
        .form-control {
            width: 90%;
            height: 45px;
            padding: 8px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 15px;
            transition: border-color 0.3s;
        }
        .form-control:focus {
            border-color: #000;
            outline: none;
            box-shadow: 0 0 0 2px rgba(0,0,0,0.1);
        }
        .otp-timer-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 20px 0;
            gap: 15px;
        }
        .otp-timer {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: #f8f9fa;
            border: 2px solid #000;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }
        #timerValue {
            font-size: 24px;
            font-weight: bold;
            color: #000;
        }
        #timerValue.expired {
            font-size: 16px;
            color: #dc3545;
        }
        .btn {
            width: 100%;
            height: 45px;
            font-size: 16px;
            font-weight: 600;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s;
        }
        .btn-primary {
            background-color: #000;
            color: #fff;
            margin-bottom: 15px;
        }
        .btn-primary:hover {
            background-color: #333;
            transform: translateY(-1px);
        }
        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-1px);
        }
        .alert-danger {
            background-color: #fff3f3;
            color: #dc3545;
            padding: 12px;
            border-radius: 5px;
            margin-top: 15px;
            text-align: center;
            border: 1px solid #ffcdd2;
        }
        .bottom-text {
            text-align: center;
            margin-top: 20px;
            color: #6c757d;
        }
        .bottom-text a {
            color: #000;
            text-decoration: none;
            font-weight: 600;
        }
        .bottom-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login_wrap">
            <div class="heading_s1">
                <h3>Verify OTP</h3>
            </div>
            <form id="otpForm" action="" method="post" onsubmit="return validateOTPForm()">
                <div class="form-group">
                    <label for="otp">Enter OTP</label>
                    <input type="text" id="otp" name="otp" class="form-control"  maxlength="6" pattern="\d*" placeholder="Enter 6-digit OTP" />
                </div>
                <button type="submit" class="btn btn-primary">Verify Email</button>
                <div class="otp-timer-container">
                    <div id="otpTimer" class="otp-timer">
                        <span id="timerValue">60</span>
                    </div>
                    <button type="button" class="btn btn-secondary" onclick="resendOTP()">Resend OTP</button>
                </div>
                <% if (locals.message && message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>
            </form>
            <div class="bottom-text">
                Already verified? <a href="/login">Login now</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
       document.getElementById("otp").focus();

        let timer = 60;
        let timerInterval;
        const resendButton = document.querySelector('.btn-secondary');

        resendButton.disabled = true;
        resendButton.style.backgroundColor = '#d3d3d3';
        resendButton.style.cursor = 'not-allowed';

        function startTimer() {
            resendButton.disabled = true;
            resendButton.style.backgroundColor = '#d3d3d3';
            resendButton.style.cursor = 'not-allowed';

            timerInterval = setInterval(() => {
                timer--;
                document.getElementById("timerValue").textContent = timer;

                if (timer <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById("timerValue").classList.add("expired");
                    document.getElementById("timerValue").textContent = "Expired";

                    resendButton.disabled = false;
                    resendButton.style.backgroundColor = '#6c757d';
                    resendButton.style.cursor = 'pointer';

                    document.getElementById("otp").disabled = true;
                }
            }, 1000);
        }

        startTimer();

        function validateOTPForm() {
            const otpInput = document.getElementById("otp").value;
            $.ajax({
                type: "POST",
                url: "/verify-passForgot-otp",
                data: { otp: otpInput },
                success: function(response) {
                    if(response.success) {
                        Swal.fire({
                            title: "OTP verified successfully",
                            text: response.message,
                            icon: "success",
                            showConfirmButton: false,
                            timer: 1500
                        }).then(function() {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: response.message || "Invalid OTP"
                        });
                    }
                },
                error: function(err) { 
                    console.error("Error:", err);
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "Failed to verify OTP. Please try again."
                    });
                }
            });

            return false;
        }

        function resendOTP() {
            $.ajax({
                type: "POST",
                url: "/resend-forgot-otp",
                success: function(response) {
                    if(response.success) {
                        Swal.fire({
                            icon: "success",
                            toast: true, 
                            position: "top-end", 
                            title: "Success",
                            text: "Resent OTP sent successfully",
                            showConfirmButton: false,
                            timer: 1500
                        });
                        clearInterval(timerInterval);
                        timer = 60;
                        document.getElementById('otp').disabled = false;
                        document.getElementById("timerValue").classList.remove("expired");
                        document.getElementById("timerValue").textContent = timer;
                        startTimer();
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: response.message || "Failed to resend OTP"
                        });
                    }
                },
                error: function(err) {
                    console.error("Error:", err);
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "An error occurred while resending OTP"
                    });
                }
            });
        }
    </script>

</body>
</html>
