    <div class="error-container">
        <div class="error-wrapper">
            <div class="error-icon">
                <i class="fa-solid fa-triangle-exclamation"></i> 
            </div>
            <h1 class="error-title">
                <%= typeof message != 'undefined' ? 'Error' : 'Oops! Something Went Wrong' %>
            </h1>
            <p class="error-message">
                <%= typeof message != 'undefined' ? message : 'We apologize, but an unexpected error occurred. Please try again later or contact support.' %>
            </p>
        </div>
    </div>

