    h2 {
        color: red;
    }
    p {
        font-size: 16px;
        color: #333;
    }
    .buttons {
        margin-top: 20px;
    }
    .buttons button {
        background: linear-gradient(135deg, #FFD700, #FF8C00);
    color: rgb(65, 59, 59);
    font-size: 16px;
    font-weight: bold;
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
    box-shadow: 0 4px 10px rgba(255, 140, 0, 0.3);
    text-transform: uppercase;
    outline: none;
