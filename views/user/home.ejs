    <style>
        /* Product Card Styles */
        .product-card {
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 16px;
        }

        .product-card:hover {
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .product-card__image {
            margin-top: 10px;
            position: relative;
            overflow: hidden;
        }

        .product-card__image img {
            width: 100%;
            height: 269px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-card__image img {
            transform: scale(1.05);
        }

        .product-card__image .label {
            color: #111111;
            font-size: 11px;
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
            display: inline-block;
            padding: 4px 15px 2px;
            background: #ffffff;
            position: absolute;
            left: 0;
            top: 20px;
        }

        .hero__items {
    background-size: cover; /* Ensures the image covers the container */
    background-position: center; /* Centers the image */
    background-repeat: no-repeat; /* Prevents repetition */
    width: 100%; /* Full width */
    min-height: 600px; /* Set a minimum height (adjust based on your design) */
    position: relative; /* Ensures proper layering */
}

.set-bg {
    background-size: cover !important; /* Use cover to fill the container */
    background-position: center !important;
    background-repeat: no-repeat !important;
    height: 100%; /* Match the parent height */
    width: 100%; /* Match the parent width */
}

.owl-carousel .hero__items {
    overflow: hidden; /* Hides any overflow */
}

@media (max-width: 768px) {
    .hero__items {
        min-height: 400px; /* Reduced height for smaller screens */
