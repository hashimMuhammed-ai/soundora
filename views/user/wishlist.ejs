/* Responsive Wishlist Styles */
@media (max-width: 767px) {
    /* Table adjustments */
    .shopping__cart__table {
        overflow-x: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .shopping__cart__table table {
        width: 100%;
        text-align: center;
    }
    
    /* Convert table to card layout for mobile */
    .shopping__cart__table thead {
        display: none; /* Hide table headers on mobile */
    }
    
    .shopping__cart__table tbody {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .shopping__cart__table tbody tr {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
        border: 1px solid #e5e5e5;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        width: 90%;
    }
    
    .shopping__cart__table td {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        text-align: center;
        padding: 8px 0;
        border: none;
    }
    
    /* Product info layout */
    .product-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding-bottom: 10px !important;
        border-bottom: 1px solid #f0f0f0 !important;
        margin-bottom: 10px;
    }
    
    .product-info img {
        width: 70px;
        height: 70px;
        margin-bottom: 10px;
    }
    
    .product-info span {
        font-weight: bold;
        font-size: 16px;
    }
    
    /* Price styling */
    .price {
        font-weight: bold;
        font-size: 18px;
        color: #111;
        padding-top: 8px !important;
        padding-bottom: 8px !important;
    }
    
    .price:before {
        content: "Price: ";
        font-weight: normal;
        font-size: 14px;
        color: #777;
    }
    
    /* Stock status styling */
    td:nth-child(3) {
        display: flex;
        justify-content: center;
        align-items: center;
        padding-top: 8px !important;
        padding-bottom: 8px !important;
    }
    
    td:nth-child(3):before {
        content: "Availability: ";
        font-weight: normal;
        font-size: 14px;
        color: #777;
        margin-right: 8px;
    }
    
    /* Actions styling */
    .actions {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 12px !important;
        margin-top: 5px;
        border-top: 1px solid #f0f0f0;
    }
    
    .btn {
        width: 100%;
        text-align: center;
        margin: 5px 0;
    }
    
    .remove {
        padding: 8px 15px;
    }
    
    /* Empty wishlist message */
    .shopping__cart__table tbody tr td[colspan="4"] {
        padding: 30px 0;
        text-align: center;
        font-size: 16px;
        color: #777;
    }
    
    /* Pagination adjustments */
    .pagination {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 5px;
    }
    
    .page-item .page-link {
        padding: 5px 10px;
        font-size: 14px;
    }
    
    /* Hide long pagination text on mobile */
    .page-link span[aria-hidden="true"] {
        display: none;
    }
    
    .page-item:first-child .page-link:after {
        content: "←";
    }
    
    .page-item:last-child .page-link:after {
        content: "→";
    }
}

/* Small phone adjustments */
@media (max-width: 375px) {
    .product-info {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    
    .product-info img {
